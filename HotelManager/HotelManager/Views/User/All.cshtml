@model IEnumerable<User>

@{
    ViewData["Title"] = "All employees";
}

<div>
    @if (!Model.Any())
    {
        <hr class="bg-info cm-hr" />
        <div class="text-secondary font-size-30 text-center mt-4">There are no employees!</div>
        <hr class="bg-info cm-hr" />
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr class="row">
                    <th class="col-md-3">Full name</th>
                    <th class="col-md-3">Date of appointment</th>
                    <th class="col-md-2">Personal Number</th>
                    <th class="col-md-2">Username</th>
                    <th class="col-md-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr class="row">
                        <td class="col-md-2">@($"{employee.FirstName} {employee.FathersName} {employee.Surname}")</td>
                        <td class="col-md-2">@employee.DateOfAppointment</td>
                        <td class="col-md-2">@employee.PersonalNumber</td>
                        <td class="col-md-2">@employee.UserName</td>
                        <td class="col-md-2">
                            <a class="btn btn-outline-primary mx-3"
                               asp-controller="User"
                               asp-action="Edit"
                               asp-route-id="@employee.Id">
                                Edit
                            </a>
                            <a class="btn btn-outline-danger"
                               asp-controller="User"
                               asp-action="Delete"
                               asp-route-id="@employee.Id">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
